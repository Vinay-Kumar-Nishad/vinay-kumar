<section class="custom-collection">
  <h2 class="custom-collection-title">{{ section.settings.collection_title }}</h2>
  <div class="custom-grid">
    {% for block in section.blocks %}
      <div class="custom-item">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url: width: 500 }}" alt="Item" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}">
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% stylesheet %}
.custom-collection {
  padding: 60px 5%;
}
.custom-collection-title {
  font-size: 1.5rem;
  margin-bottom: 20px;
  text-align: center;
}
.custom-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}
.custom-item img { 
  width: 100%; 
  border-radius: 8px; 
  display: block;
}

 
@media (max-width: 768px) {
  .custom-collection {
    padding: 40px 5%;
  }
  .custom-grid {
    grid-template-columns: repeat(2, 1fr);  
    gap: 15px;
  }
}
@media (max-width: 480px) {
  .custom-grid {
    grid-template-columns: 1fr;  
  }
}
{% endstylesheet %}

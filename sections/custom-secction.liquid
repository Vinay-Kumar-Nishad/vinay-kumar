{% schema %}
  {
    "name": "custom-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Upload Logo"
      },
      {
        "type": "image_picker",
        "id": "hero_bg",
        "label": "banner Image"
      },

      {
        "type": "text",
        "id": "tagline",
        "label": "tagline",
        "default": "Find the ideal gift for your loved ones."
      },
      {
        "type": "text",
        "id": "choose_btn_text",
        "label": "Choose Button Text",
        "default": "CHOOSE GIFT"
      }, {
        "type": "url",
        "id": "choose_btn_link",
        "label": "choose Button Link"
      }, {
        "type": "image_picker",
        "id": "banner_img",
        "label": "gift banner image"
      }, {
        "type": "text",
        "id": "hero_title",
        "label": "Hero Title",
        "default": "The Gift Guide"
      }, {
        "type": "textarea",
        "id": "hero_subtitle",
        "label": "Hero Subtitle",
        "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
      }, {
        "type": "text",
        "id": "hero_btn_text",
        "label": "Hero Button Text",
        "default": "SHOP NOW"
      }, {
        "type": "text",
        "id": "section_bottom_text",
        "label": "section footer Text",
        "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
      }, {
        "type": "url",
        "id": "hero_btn_link",
        "label": "Hero Button Link"
      }
    ],
    "blocks": [
      {
        "type": "image_block",
        "name": "Image Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "custom-section"
      }
    ]
  }
{% endschema %}

<section class="hero-section">
  <div class="header">

    <div class="menu-icon">
      <button class="hamburger">
        ☰
      </button>
    </div>

    {% if settings.logo %}
      <div>
        <a href="{{ routes.root_url }}" class="logo">
          <img
            src="{{ settings.logo | image_url: width: 151.42, height: 45 }}"
            alt="{{ shop.name }}"
            width="151"
            height="45">
        </a>
      </div>
    {% else %}
      <h2 class="logo-text">{{ shop.name }}</h2>
    {% endif %}
    <div>
      <span class="tagline">Find the ideal gift for your loved ones.</span>
    </div>
    <div>
      <a href="{{ section.settings.choose_btn_link }}" class="btn choose_btn_text"><span>CHOOSE GIFT</span>
        <span>
          →</span>
      </a>
    </div>
  </div>

  <div class="hero">
    {% if section.settings.hero_bg %}
      <div class="hero-bg">
        <img
          src="{{ section.settings.hero_bg | image_url: width: 1600 }}"
          alt="Gift Guide Background"
          width="{{ section.settings.hero_bg.width }}"
          height="{{ section.settings.hero_bg.height }}">
      </div>
    {% endif %}
  </div>

  <div class="gift-section">
    <div class="gift-content">
      <h1 class="gift-title">{{ section.settings.hero_title }}</h1>
      <p class="gift-subtitle">{{ section.settings.hero_subtitle }}</p>
      {% comment %} {% if section.settings.hero_btn_link %} {% endcomment %}
      <a href="{{ section.settings.hero_btn_link | default: '#' }}" class="main-btn">
        <span>{{ section.settings.hero_btn_text }}</span>
        <span class="arrow-link">
          →</span>
      </a>
    {% comment %} {% endif %} {% endcomment %}
    </div>
    {% if section.settings.banner_img %}
      <div class="gift-banner">
        <img
          src="{{ section.settings.banner_img | image_url: width: 1600 }}"
          alt="{{ section.settings.hero_title }}"
          width="{{ section.settings.banner_img.width }}"
          height="{{ section.settings.banner_img.height }}"
          class="banner-img">
      </div>
    {% endif %}
  </div>

  <div class="bottom-text">{{ section.settings.section_bottom_text }}</div>
</section>

{% stylesheet %}
  .menu-icon {
    display: none;
  }
  .p-0 {
    padding: 0 !important;
  }
  .tagline {
    font-weight: 400;
    font-size: 16px;
    line-height: 13.42px;
    color: #000000;
    text-align: center;
  }
  .choose_btn_text {
    font-weight: 400;
    font-size: 16px;
    line-height: 20.48px;
    color: #000000;
    padding: 8px 16px;
    background: #FFF544;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    display: inline-block;
  }
  .choose_btn_text::after,  .main-btn::after {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #000;
    transition: left 0.5s ease;
    z-index: 0;
  } 
  .choose_btn_text:hover::after, .main-btn:hover::after {
    left: 0;
  }
   .choose_btn_text span, .choose_btn_text,  .main-btn span,
  .main-btn {
    position: relative;
    z-index: 1;
  }

  .choose_btn_text:hover {
    color: #fff;
  }
  .hero-section {
    font-family: 'Jost'
    , sans-serif;
    margin: 0;
    padding: 0;
  }
  .arrow-link {
    margin-left: 20px;
  }
  .bottom-text {
    background-color: #F5F5F5;
    color: #000;
    text-align: center;
    font-size: 16px;
    line-height: 13.42px;
    font-weight: 400;
    padding: 10px 50px;
  }
  .gift-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 8px;
    gap: 0;

  }

  .gift-banner {
    display: flex;
    justify-content: flex-end;

  }

  .banner-img {
    max-width: 100%;
    height: auto;
  }
  .gift-title {
    font-size: 70px;
    font-weight: 500;
    line-height: 100%;
    font-family: "jost";
    margin: 0;
  }
  .gift-subtitle {
    font-size: 20px;
    font-weight: 400;
    line-height: 140%;
    margin-top: 50px;
    margin-bottom: 50px;
    color: #000;
  }
  .main-btn {
    background: #000;
    color: #fff;
    padding: 14.26px 50px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 400;
    line-height: 20.48px;
    margin-bottom: 50px !important;
    color: #fff;
    display: inline-flex;
    position: relative;
    overflow: hidden;
  } 
  .main-btn::after {
    background: #FFF544!important;
  } 
  .main-btn:hover {
    color: #000;
  } 
  .custom-collection {
    padding: 16px 8px;
  }
  .custom-collection-title {
    font-size: 1.5rem;
    margin-bottom: 20px;
    text-align: center;
  }
  .custom-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }
  .custom-item img {
    width: 100%;
    border-radius: 8px;
    display: block;
  } 
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 5%;
    border-bottom: 1px solid #eee;
  }
  .logo img {
    max-height: 40px;
  }
  .right {
    display: flex;
    gap: auto;
    align-items: center;
  } 
  .hero {
    position: relative;
    text-align: left;
    padding: 16px 30px;
  }
  .hero-bg img {
    width: 100%;
    max-height: 100%;
    object-fit: cover;
    height: auto;
  } 
  .title {
    font-size: 2.5rem;
    font-weight: bold;
  }
  .gift-subtitle {
    margin: 15px 0;
    font-size: 20px;
  }
  @media screen and (min-width: 990px) {
    .header {
      grid-template-columns: 1fr 1fr !important;
    }
    .gift-content {
      padding-left: 67px;
      flex-direction: column;
      max-width: 40%;
    }
  }
  @media (max-width: 480px) {
    .custom-grid {
      grid-template-columns: 1fr;
    }
  }
  @media (max-width: 768px) {
    .header {
      background: #F7F7F7;
    }
    .bottom-text {
      font-size: 14px;
    }

    .tagline,
    .choose_btn_text,
    .hero {
      display: none;
    }
    .menu-icon {
      display: block;
      text-align: left;
    }
    .hamburger {
      background: transparent;
      border: none;
      font-size: 24px;
      cursor: pointer;
    }
    .logo {
      display: flex;
    }
    .gift-section {
      flex-direction: column;
      align-items: center;
      text-align: center;
      position: relative;
      margin-top: 40px;
    }
    .gift-banner {
      justify-content: center;
    }

    .gift-title {
      font-size: 1.8rem;
    }
    .gift-subtitle {
      font-size: 16px;
      line-height: 130%;
    }
    .main-btn {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      margin: auto;
      z-index: 10;
      max-width: 230px;
    }
    .custom-collection {
      padding: 40px 5%;
    }
    .custom-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }
    .header {
      flex-direction: column;
      gap: auto;
      text-align: center;
    }
    .right {
      flex-direction: column;
      gap: 10px;
    }
    .hero {
      padding: 30px 5%;
    }
    .hero-content {
      position: relative;
      top: auto;
      left: auto;
      max-width: 100%;
      margin-top: -40px;
      background: rgba(255, 255, 255, 0.8);
      padding: 20px;
      border-radius: 8px;
    }
    .title {
      font-size: 1.8rem;
    }
  }
{% endstylesheet %}
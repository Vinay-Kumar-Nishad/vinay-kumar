{% schema %}
  {
    "name": "gift-guide-section",
    "settings": [

      {
        "type": "image_picker",
        "id": "banner_img",
        "label": "gift banner image"
      },
      {
        "type": "text",
        "id": "hero_title",
        "label": "Hero Title",
        "default": "The Gift Guide"
      },
      {
        "type": "textarea",
        "id": "hero_subtitle",
        "label": "Hero Subtitle",
        "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
      },
      {
        "type": "text",
        "id": "hero_btn_text",
        "label": "Hero Button Text",
        "default": "SHOP NOW"
      }, {
        "type": "url",
        "id": "hero_btn_link",
        "label": "Hero Button Link"
      }
    ],
    "presets": [
      {
        "name": "gift-guide-section"
      }
    ]
  }
{% endschema %}

<section class="gift-section">
  <div class="gift-content">
    <h1 class="title">{{ section.settings.hero_title }}</h1>
    <p class="subtitle">{{ section.settings.hero_subtitle }}</p>
    {% if section.settings.hero_btn_link %}
      <a href="{{ section.settings.hero_btn_link }}" class="main-btn">
        {{ section.settings.hero_btn_text }}
      </a>
    {% endif %}
  </div>
  {% if section.settings.banner_img %}
  <div class="gift-banner">
    <img
      src="{{ section.settings.banner_img | image_url: width: 890 }}"
      alt="{{ section.settings.hero_title }}"
       width="{{ section.settings.banner_img.width }}"
      height="{{ section.settings.banner_img.height }}" 
      class="banner-img" />
  </div>
  {% endif %}
</section>
 


{% stylesheet %}
.banner{
    max-width:  890px;
    display: flex;
}
  .gift-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 5%;
    border-bottom: 1px solid #eee;
  }
  .logo img {
    max-height: 40px;
  }
  .right {
    display: flex;
    gap: auto;
    align-items: center;
  }
  .btn {
    background: #FFF544;
    padding: 8px 16px;
    font-weight: bold;
    text-decoration: none;
  }

  .hero {
    position: relative;
    text-align: left;
    padding: 16px 8px;
  }
  .hero-bg img {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
  }
  .hero-content {
    position: absolute;
    top: 20%;
    left: 10%;
    max-width: 500px;
  }
  .title {
    font-size: 2.5rem;
    font-weight: bold;
  }
  .subtitle {
    margin: 15px 0;
    font-size: 1rem;
  }
  .main-btn {
    background: black;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
  }

  @media screen and (min-width: 990px) {
    .header {
      grid-template-columns: 1fr 1fr !important;
    }
  }
  @media (max-width: 768px) {
    .header {
      flex-direction: column;
      gap: 10px;
      text-align: center;
    }
    .right {
      flex-direction: column;
      gap: 10px;
    }
    .hero {
      padding: 30px 5%;
    }
    .hero-content {
      position: relative;
      top: auto;
      left: auto;
      max-width: 100%;
      margin-top: -40px;
      background: rgba(255, 255, 255, 0.8);
      padding: 20px;
      border-radius: 8px;
    }
    .title {
      font-size: 1.8rem;
    }
    .subtitle {
      font-size: 0.9rem;
    }
  }
{% endstylesheet %}